<Page
    x:Class="Viewbox01.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Viewbox01"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        <StackPanel>

            <TextBlock Text="幅300で表示" />
            <Viewbox Width="300">
                <Image Source="/Common/Images/yokohama1.jpg" />
            </Viewbox>

            <TextBlock Text="幅450高さ100でFill表示" />
            <Viewbox Width="450" Height="100"
                     Stretch="Fill">
                <Image Source="/Common/Images/yokohama1.jpg" />
            </Viewbox>

            <TextBlock Text="幅300高さ100でUniform表示" />
            <Viewbox Width="300" Height="100"
                     Stretch="Uniform">
                <Image Source="/Common/Images/yokohama1.jpg" />
            </Viewbox>

            <TextBlock Text="幅300高さ100でUniformToFill表示" />
            <Viewbox Width="300" Height="100"
                     Stretch="UniformToFill">
                <Image Source="/Common/Images/yokohama1.jpg" />
            </Viewbox>

        </StackPanel>

    </Grid>
</Page>
