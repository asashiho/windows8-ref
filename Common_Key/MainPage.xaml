<Page
    x:Class="Common_Key.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Common_Key"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        <StackPanel KeyDown="stackPanel_KeyDown">
            <TextBox x:Name="textBoxName" Width="200"
                     KeyUp="textBoxName_KeyUp"
                     KeyDown="textBoxName_KeyDown" />
            <TextBlock x:Name="textBlockName1" FontSize="20" />
            <TextBlock x:Name="textBlockName2" FontSize="20" />
            <TextBlock x:Name="textBlockName3" FontSize="20" />
        </StackPanel>

    </Grid>
</Page>
